{
  "title": "NetNewsWire Keys",
  "rules": [
    {
      "description": "NetNewsWire: Ctrl + NPDU to arrow keys - similar to finder",
      "manipulators": [
          {
            "description": "Ctrl U to left",
              "from": {
                  "key_code": "f",
                  "modifiers":{
                      "mandatory":["control"]
                  }
              },
              "to": [
                  {
                    "key_code": "left_arrow"
                  }
              ],
              "conditions": [
                  {
                      "bundle_identifiers": [
                          "^com\\.ranchero\\.NetNewsWire-Evergreen$"
                      ],
                      "type": "frontmost_application_if"
                  }
              ],
              "type": "basic"
          },
          {
              "description": "Ctrl D to right",
              "from": {
                  "key_code": "h",
                  "modifiers":{
                      "mandatory":["control"]
                  }
              },
              "to": [
                  {
                    "key_code": "right_arrow"
                  }
              ],
              "conditions": [
                  {
                      "bundle_identifiers": [
                          "^com\\.ranchero\\.NetNewsWire-Evergreen$"
                      ],
                      "type": "frontmost_application_if"
                  }
              ],
              "type": "basic"
          },
          {
              "description": "Ctrl N to down",
              "from": {
                  "key_code": "l",
                  "modifiers":{
                      "mandatory":["control"]
                  }
              },
              "to": [
                  {
                    "key_code": "down_arrow"
                  }
              ],
              "conditions": [
                  {
                      "bundle_identifiers": [
                          "^com\\.ranchero\\.NetNewsWire-Evergreen$"
                      ],
                      "type": "frontmost_application_if"
                  }
              ],
              "type": "basic"
          },
          {
              "description": "Ctrl P to up",
              "from": {
                  "key_code": "r",
                  "modifiers":{
                      "mandatory":["control"]
                  }
              },
              "to": [
                  {
                    "key_code": "up_arrow"
                  }
              ],
              "conditions": [
                  {
                      "bundle_identifiers": [
                          "^com\\.ranchero\\.NetNewsWire-Evergreen$"
                      ],
                      "type": "frontmost_application_if"
                  }
              ],
              "type": "basic"
          }


      ]
    }
  ]
}

